<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TipoPaginaXF.TiposPagina.Navegation.Page1"
             Title="Título da Navigation">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" Icon="Xamarin.png"/>
        <ToolbarItem Text="Detalhes" Icon="gremio.png"/>
        <ToolbarItem Text="Ordenar" Icon="Libertadore.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu sou uma ContentPage!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Ir para página 2" Clicked="MudarPagina2"/>
            <Button Text="Mostrar Modal" Clicked="MostrarModal"/>
            <Button Text="Mostrar Master" Clicked="MostrarMaster"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>